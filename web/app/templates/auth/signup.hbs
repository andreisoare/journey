<form class="form" {{action "signup" on="submit"}}>
  {{input placeholder="Your name" value=name type="text" name="name" class="input"}}
  {{input placeholder="Your email" value=email type="text" name="email" class="input"}}
  {{input placeholder="Your password" value=password type="password" name="password" class="input"}}
  <button class="blue-btn submit" type="submit" class="btn" {{bind-attr disabled="signupWaiting"}}>Sign up</button>
  <div class="auth-alternative">or {{link-to "Log in" "auth.login" class="blue-link"}}</div>
  {{#if signupError}}<div class="error">{{signupError}}</div>{{/if}}
  {{#if signupWaiting}}<img class="waiting" src="img/preloader-horizontal-black.gif"/>{{/if}}
</form>
